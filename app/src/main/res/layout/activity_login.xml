<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karan.traffikill.Activities.LoginActivity">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp"
        android:background="@drawable/rounded_textview"
        android:text="Username"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_textview"
        android:text="TextView"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:layout_alignLeft="@+id/tvUsername"
        android:layout_alignStart="@+id/tvUsername" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:background="@drawable/rounded_textview"
        android:layout_below="@+id/tvPassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="New User?"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_below="@+id/btnSignIn"
        android:layout_alignRight="@+id/btnSignIn"
        android:layout_alignEnd="@+id/btnSignIn" />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:text=" Sign Up."
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tvNewUser"
        android:layout_alignBottom="@+id/tvNewUser"
        android:layout_alignLeft="@+id/btnSignIn"
        android:layout_alignStart="@+id/btnSignIn" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvNewUser"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" />
</RelativeLayout>
